---
import { Github, Linkedin, ArrowUpRight, GraduationCap } from '@lucide/astro';

import { getCloudflareImage } from '../utils/images.js';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);

const githubAvatar = 'https://avatars.githubusercontent.com/u/157653669';
---

<section id="hero " class="hero min-h-[90vh] bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse gap-12 px-4 lg:px-20">
    <div class="relative group animate-on-scroll">
      <div
        class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000"
      >
      </div>
      <div class="avatar">
        <div
          class="w-48 md:w-64 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
        >
          <img
            src={getCloudflareImage(githubAvatar, 400)}
            srcset={`
        ${getCloudflareImage(githubAvatar, 200)} 200w,
        ${getCloudflareImage(githubAvatar, 400)} 400w
      `}
            sizes="(max-width: 768px) 200px, 400px"
            alt="Ivan Cruz"
            width="400"
            height="400"
            loading="eager"
            decoding="async"
            class="rounded-full shadow-lg object-cover"
          />
        </div>
      </div>
    </div>

    <div class="text-center lg:text-left max-w-2xl animate-on-scroll text-base-content">
      <h1 class="text-5xl md:text-6xl font-black mb-4 leading-tight">
        {t('hero.greeting')} <span class="text-primary">Ivan Cruz</span> {t('hero.role')}
      </h1>

      <p class="py-6 text-lg opacity-90 leading-relaxed text-base-content">
        <span set:html={t('hero.description')} />
      </p>

      <div class="flex flex-wrap gap-4 justify-center lg:justify-start mb-8">
        <a href="#proyectos" class="btn btn-primary">{t('hero.cta')}</a>
      </div>

      {/* 3. LINKS REDES SOCIALES */}
      <div
        class="flex flex-wrap items-center justify-center gap-6 md:gap-8 mb-12 text-sm md:text-base"
      >
        <a
          href="https://github.com/Ivandv19"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 text-base-content hover:text-primary transition-colors"
        >
          <Github size={18} /> Github <span class="font-medium"></span>{' '}
          <ArrowUpRight size={16} />
        </a>
        <a
          href="https://www.linkedin.com/in/ivan-cruz-1906mx"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 text-base-content hover:text-primary transition-colors"
        >
          <Linkedin size={18} /> Linkedin <span class="font-medium"></span>{' '}
          <ArrowUpRight size={16} />
        </a>

        <a
          href="https://discord.com/users/ivandv19"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 text-base-content hover:text-primary transition-colors"
        >
          <span class="icon-[line-md--discord]"></span> Discord <ArrowUpRight
            size={16}
          />
        </a>

        <a
          href="https://app.aluracursos.com/user/ivanmx19"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 text-base-content hover:text-primary transition-colors"
        >
          <span class="font-bold text-lg">a</span>{' '}
          <span class="font-medium"></span> Alura <ArrowUpRight size={16} />
        </a>

        <a
          href="https://codigofacilito.com/usuarios/Ivandv19"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 text-base-content hover:text-primary transition-colors"
        >
          <GraduationCap size={18} /> Codigo facilito <ArrowUpRight size={16} />
        </a>
      </div>
    </div>
  </div>
</section>
