---
const { class: className } = Astro.props;
---

<button class:list={["theme-toggle-btn btn btn-ghost btn-circle btn-sm", className]} aria-label="Toggle Theme">
  <!-- Sun Icon (for light mode) -->
  <svg
    class="sun-icon w-5 h-5 hidden dark:block"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>

  <!-- Moon Icon (for dark mode) -->
  <svg
    class="moon-icon w-5 h-5 block dark:hidden"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<script>
  // Script para manejar el cambio de tema
  function initThemeToggle() {
    const toggleBtns = document.querySelectorAll(".theme-toggle-btn");
    
    toggleBtns.forEach(btn => {
      // Evitar múltiples listeners
      if (btn.hasAttribute('data-init')) return;
      
      btn.addEventListener("click", () => {
        const element = document.documentElement;
        // Leer tema actual directamente del atributo o localStorage
        const currentTheme = element.getAttribute("data-theme");
        const newTheme = currentTheme === "business" ? "nord" : "business";
        
        // Aplicar nuevo tema
        element.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
        
        // Sincronizar clase 'dark' para Tailwind
        if (newTheme === 'business') {
            element.classList.add('dark');
        } else {
            element.classList.remove('dark');
        }
      });
      
      btn.setAttribute('data-init', 'true');
    });
  }

  // Ejecutar inicialmente
  initThemeToggle();

  // Re-ejecutar en navegación de Astro (View Transitions)
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
