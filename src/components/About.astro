---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="sobre-mi" class="py-24 px-4 lg:px-20 bg-base-200/50">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start animate-on-scroll">
    <div>
      <h2 class="text-4xl font-bold mb-6 text-base-content">{t('about.title')}</h2>
      <div class="prose prose-lg text-base-content/90">
        <p>
          <span set:html={t('about.p1')} />
        </p>
        <p>
          <span set:html={t('about.p2')} />
        </p>
      </div>

      <div class="flex gap-8 mt-10">
        <div>
          <div class="text-3xl font-bold text-primary">+20</div>
          <div class="text-xs uppercase font-bold text-base-content/70">{t('about.stats.projects')}</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-secondary">+2</div>
          <div class="text-xs uppercase font-bold text-base-content/70">{t('about.stats.exp')}</div>
        </div>
      </div>
    </div>

    <div>
      <h3 class="text-2xl font-bold mb-8 flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-primary"
          ><path d="M22 10v6M2 10l10-5 10 5-10 5z"></path><path
            d="M6 12v5c3 3 9 3 12 0v-5"></path></svg
        >
        {t('about.education.title')}
      </h3>

      <ul
        class="timeline timeline-vertical timeline-snap-icon max-md:timeline-compact"
      >
        <li>
          <div class="timeline-middle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="h-5 w-5 text-primary animate-pulse"
              ><path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <div class="timeline-start md:text-end mb-10">
            <time class="font-mono italic opacity-60">Nov 2024 - Dic 2025</time>
            <div class="text-lg font-black text-secondary">
              {t('about.job1.role')}
            </div>

            <p class="text-sm opacity-70">
              {t('about.job1.desc')}
            </p>
          </div>
          <hr class="bg-primary" />
        </li>

        <li>
          <hr class="bg-primary" />
          <div class="timeline-middle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="h-5 w-5 text-primary"
              ><path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <div class="timeline-end mb-10">
            <time class="font-mono italic opacity-60">Ene 2024 - Oct 2024</time>
            <div class="text-lg font-black font-primary text-primary">
              {t('about.job2.role')}
            </div>
            <p class="text-xs font-bold opacity-60 uppercase mb-1">
              {t('about.job2.company')}
            </p>
            <p class="text-sm opacity-70">
              {t('about.job2.desc')}
            </p>
          </div>
          <hr class="bg-primary" />
        </li>

        <li>
          <hr class="bg-primary" />
          <div class="timeline-middle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="h-5 w-5 text-primary"
              ><path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <div class="timeline-start md:text-end mb-10">
            <time class="font-mono italic opacity-60">Jun 2017 - Jun 2020</time>
            <div class="text-lg font-black">{t('about.job3.role')}</div>
            <p class="text-xs font-bold opacity-60 uppercase mb-1">
              {t('about.job3.company')}
            </p>
            <p class="text-sm opacity-70">
              {t('about.job3.desc')}
            </p>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>
