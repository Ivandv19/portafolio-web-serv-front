---
import { proyectos } from "../data/proyectos";
import { getCloudflareImage } from "../utils/images";
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="proyectos" class="py-24 px-4 lg:px-20 bg-base-200">
  <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-4">
    <div class="max-w-xl animate-on-scroll">
      <h2 class="text-4xl font-bold mb-4">{t('projects.title')}</h2>
      <p class="text-lg opacity-70">
        {t('projects.desc')}
      </p>
    </div>
    <a
      href="https://github.com/Ivandv19"
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-outline btn-sm">{t('projects.view_git')}</a
    >
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      proyectos.map((proyecto) => (
        <div class="card bg-base-100 shadow-xl overflow-hidden group animate-on-scroll">
          <figure class="relative aspect-video overflow-hidden bg-base-300">
            <div class="absolute inset-0 bg-primary/10 group-hover:bg-transparent transition-colors z-10" />

            {proyecto.img && (
              <img
                src={getCloudflareImage(proyecto.img, 800)}
                srcset={`
        ${getCloudflareImage(proyecto.img, 400)} 400w,
        ${getCloudflareImage(proyecto.img, 800)} 800w,
        ${getCloudflareImage(proyecto.img, 1200)} 1200w
                `}
                sizes="(max-width: 768px) 95vw, 400px"
                width="800"
                height="450"
                alt={proyecto.titulo}
                loading="lazy"
                decoding="async"
                class="group-hover:scale-110 transition-transform duration-500 object-cover w-full h-full"
                onerror="this.style.display='none'; console.error('Falló imagen:', this.currentSrc)"
              />
            )}
          </figure>

          <div class="card-body">
            <h3 class="card-title">{proyecto.titulo}</h3>
            <p class="text-sm opacity-70">{proyecto.desc[lang] || proyecto.desc.es}</p>
            <div class="card-actions justify-start mt-4">
              {proyecto.tags.map((tag) => (
                <div class="badge badge-outline text-xs">{tag}</div>
              ))}
            </div>
            <div class="mt-6 flex justify-between items-center">
              <a
                href={proyecto.live}
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary font-bold hover:underline text-sm"
              >
                {t('projects.demo')}
              </a>
              <a 
                href={proyecto.repo} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="btn btn-ghost btn-xs"
              >
                Repo ↗
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
