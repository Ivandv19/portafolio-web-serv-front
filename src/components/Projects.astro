---

import { proyectos } from '../data/proyectos.js';
import { getCloudflareImage } from '../utils/images';
---

<section id="proyectos" class="py-24 px-4 lg:px-20 bg-base-200">
  <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-4">
    <div class="max-w-xl">
      <h2 class="text-4xl font-bold mb-4">Proyectos Destacados</h2>
      <p class="text-lg opacity-70">
        Una muestra de interfaces modernas desplegadas con éxito en la nube.
      </p>
    </div>
    <a
      href="https://github.com/Ivandv19"
      target="_blank"
      class="btn btn-outline btn-sm">Ver todo en Github</a
    >
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      proyectos.map((proyecto) => (
        <div class="card bg-base-100 shadow-xl overflow-hidden group">
          <figure class="relative aspect-video overflow-hidden">
            <div class="absolute inset-0 bg-primary/20 group-hover:bg-transparent transition-colors z-10" />

            <img
              src={getCloudflareImage(proyecto.img, 800)}
              srcset={`
    ${getCloudflareImage(proyecto.img, 400)} 400w,
    ${getCloudflareImage(proyecto.img, 800)} 800w,
    ${getCloudflareImage(proyecto.img, 1200)} 1200w
  `}
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              width="800"
              height="450"
              alt={proyecto.titulo}
              loading="lazy"
              decoding="async"
              class="group-hover:scale-110 transition-transform duration-500 object-cover w-full h-full"
            />

            <div class="absolute top-4 right-4 z-20">
              <div class="badge badge-success gap-2 shadow-lg font-bold">
                ● Live
              </div>
            </div>
          </figure>

          <div class="card-body">
            <h3 class="card-title">{proyecto.titulo}</h3>
            <p class="text-sm opacity-70">{proyecto.desc}</p>
            <div class="card-actions justify-start mt-4">
              {proyecto.tags.map((tag) => (
                <div class="badge badge-outline text-xs">{tag}</div>
              ))}
            </div>
            <div class="mt-6 flex justify-between items-center">
              <a
                href={proyecto.live}
                class="text-primary font-bold hover:underline text-sm"
              >
                Demo Online
              </a>
              <a href={proyecto.repo} class="btn btn-ghost btn-xs">
                Repo ↗
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
